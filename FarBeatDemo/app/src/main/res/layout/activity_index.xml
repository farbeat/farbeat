<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingTop="50dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farbeat SDK Demo"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Button
        android:id="@+id/index_interoperability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="onClick"
        android:text="@string/app_interoperability"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/index_calculate"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/app_calculate"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/index_qrs"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:text="@string/app_qrs"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/index_clear"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="【清理】本地缓存信息"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>
