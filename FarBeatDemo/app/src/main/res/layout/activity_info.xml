<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="测试人："
            android:textSize="14sp" />

        <EditText
            android:id="@+id/info_tester"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:textColorHint="@color/gray9"
            android:hint="请输入测试人姓名" />
    </LinearLayout>

    <include layout="@layout/horizontal_line8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="送检人："
            android:textSize="14sp" />

        <EditText
            android:id="@+id/info_submitter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:textColorHint="@color/gray9"
            android:hint="请输入送检人姓名" />
    </LinearLayout>

    <include layout="@layout/horizontal_line8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="测试公司："
            android:textSize="14sp" />

        <EditText
            android:id="@+id/info_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:textColorHint="@color/gray9"
            android:hint="请输入测试公司名称" />
    </LinearLayout>

    <include layout="@layout/horizontal_line8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/info_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClick"
        android:text="输入完毕，前往测试"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>